<Window x:Class="DungonMasterGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DungonMasterGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="Window_KeyDown"
        >
    <DockPanel>
        <Grid x:Name="ActionsLeiste" DockPanel.Dock="Bottom" Margin="100, 10, 100, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
        </Grid>

        <StackPanel x:Name="PlayerStats" DockPanel.Dock="Left" Margin="10, 10, 10, 10">
            <TextBlock>Level: 1</TextBlock>
        </StackPanel>

        <StackPanel x:Name="Inventar" DockPanel.Dock="Right" Margin="10, 10, 10, 10">
            <Button Click="SkillManager">Skill</Button>
        </StackPanel>

        <Grid x:Name="GameBoard" VerticalAlignment="Center" HorizontalAlignment="Center" ShowGridLines="False" Width="250" Height="250">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

        </Grid>
        
    </DockPanel>
</Window>
