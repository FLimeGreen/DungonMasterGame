<Window x:Class="DungonMasterGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DungonMasterGame"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="KeyDown">
            <behaviors:InvokeCommandAction Command="{Binding Window_KeyDownCommand}" PassEventArgsToCommand="True"/>
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>
    
    
    <DockPanel>
        <Grid x:Name="ActionsLeiste" DockPanel.Dock="Bottom" Margin="100, 10, 100, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
                <ColumnDefinition MinWidth="35"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Grid.Row="0" Grid.Column="0" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding AktionsLeiste[0]}" />

            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Grid.Row="0" Grid.Column="1" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding AktionsLeiste[1]}" />

            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Grid.Row="0" Grid.Column="2" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding AktionsLeiste[2]}" />

            <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Grid.Row="0" Grid.Column="3" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding AktionsLeiste[3]}" />

            <Border Grid.Row="0" Grid.Column="4" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Grid.Row="0" Grid.Column="4" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding AktionsLeiste[4]}" />

            <Border Grid.Row="0" Grid.Column="5" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Grid.Row="0" Grid.Column="5" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding AktionsLeiste[5]}" />

            <Border Grid.Row="0" Grid.Column="6" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Grid.Row="0" Grid.Column="6" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding AktionsLeiste[6]}" />

            <Border Grid.Row="0" Grid.Column="7" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Grid.Row="0" Grid.Column="7" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding AktionsLeiste[7]}" />

            <Border Grid.Row="0" Grid.Column="8" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Grid.Row="0" Grid.Column="8" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding AktionsLeiste[8]}" />

            <Border Grid.Row="0" Grid.Column="9" BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Grid.Row="0" Grid.Column="9" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding AktionsLeiste[9]}" />
        </Grid>

        <StackPanel x:Name="PlayerStats" DockPanel.Dock="Left" Margin="10, 10, 10, 10">
            <TextBlock Text="{Binding Levelstring}"/>
        </StackPanel>

        <StackPanel x:Name="Inventar" DockPanel.Dock="Right" Margin="10, 10, 10, 10">
            <Button Click="SkillManager">Skill</Button>
            <Button Command="{Binding ChangeGrafikCommand}">Change Grafik</Button>
            <Button Command="{Binding SpwanNewWaveCommand}">Spwan neue Gegner</Button>
        </StackPanel>

        <Grid x:Name="GameBoard" VerticalAlignment="Center" HorizontalAlignment="Center" ShowGridLines="False" Width="250" Height="250">
            <ItemsControl ItemsSource="{Binding GrafikTiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Width="250" Height="250" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Grafik_Char}" FontSize="20" FontWeight="Bold"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding Path=X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Path=Y}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>

            <ItemsControl ItemsSource="{Binding GrafikFiguren}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Width="250" Height="250" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Grafik_Char}" FontSize="20" FontWeight="Bold"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding Path=X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Path=Y}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>

            <!-- Hier noch einmal für Images -->
            
            <ItemsControl ItemsSource="{Binding GrafikTiles_Image}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Width="250" Height="250" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!---<TextBlock Text="{Binding Grafik_Char}" FontSize="20" FontWeight="Bold"/>  -->
                        <Image Source="{Binding Grafik_Immage}" Width="35.7" Height="35.7" Stretch="Uniform"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding Path=X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Path=Y}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>

            <ItemsControl ItemsSource="{Binding GrafikFiguren_Image}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Width="250" Height="250" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!---<TextBlock Text="{Binding Grafik_Char}" FontSize="20" FontWeight="Bold"/>  -->
                        <Image Source="{Binding Grafik_Immage}" Width="35.7" Height="35.7" Stretch="Uniform">
                            <Image.RenderTransform>
                                <RotateTransform Angle="{Binding Path=Rotation}" CenterX="17.85" CenterY="17.85"/>
                            </Image.RenderTransform>
                        </Image>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding Path=X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Path=Y}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>

        </Grid>
        
    </DockPanel>
</Window>
