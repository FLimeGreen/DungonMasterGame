<Window x:Class="DungonMasterGame.WPF.SkillTreeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DungonMasterGame.Fertigkeiten.SkillTree"
        mc:Ignorable="d"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        Title="SkillTreeWindow" Height="450" Width="800">
    <DockPanel>
        <TreeView DockPanel.Dock="Left" ItemsSource="{Binding Skilltree.Skilltree}">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="SelectedItemChanged">
                    <behaviors:InvokeCommandAction Command="{Binding Tree_SelctedItemChangedCommand}" PassEventArgsToCommand="True"/>
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>

            <TreeView.Resources>

                <HierarchicalDataTemplate DataType="{x:Type local:SkillForge}" ItemsSource="{Binding Weiterleiten}">
                    <TextBlock Text="{Binding Name}" Margin="0, 0, 10, 0"/>
                </HierarchicalDataTemplate>

                <DataTemplate DataType="{x:Type local:SkillBlatt}">
                    <TextBlock Text="{Binding Name}" Margin="0, 0, 10, 0"/>
                </DataTemplate>

            </TreeView.Resources>
        </TreeView>

        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
            <StackPanel Margin="10, 10, 10, 10">
                <TextBlock Text="{Binding Skillname}"/>
                <TextBlock Text="{Binding Skillbeschreibung}"/>
                <TextBlock Text="{Binding Skillgekauft}"/>
            </StackPanel>
            
            <StackPanel Margin="10, 10, 10, 10">
                <TextBlock Text="{Binding VerfuegbareSkillpunkte}"/>
                <Button Command="{Binding SkillkaufenCommand}" IsEnabled="{Binding Skillkaufenmoeglich}">Skill kaufen</Button>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
